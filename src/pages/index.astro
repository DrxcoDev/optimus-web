---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import About from '../components/About.astro';
import Install from '../components/install.astro';



import '@fontsource/poppins/400.css';
import '@fontsource/poppins/900.css';
import '@fontsource/twinkle-star'
---

<Layout title="Welcome to Astro.">
	<main class="text-neutral-200 hg h-[400vh] snap-y">

		<div class="sticky top-0 z-50">
			<Nav/>
		</div>
		<div class="items-center text-center mx-[300px] mt-[100px] div-main snap-normal">
			
			<h1 class="text-5xl title text-center text-focus-in">Fast your projects with <span class="nameweb">Optimus</span></h1>

			<p class="text-center py-[60px] text-neutral-700">Optimize you projects web, using JavaScript language, fast & easy</p>

			<div class="flex mt-[100px] align-items mx-[200px] space-x-10 btns">
				<button class="bg-[#ffa9a9] text-neutral-800 w-[250px] rounded-lg p-[10px] flicker-1">Get Started</button>
				<button class="text-[#ffa9a9]  w-[250px] rounded-lg border border-[#ffa9a9]">Learn More</button>
				
			</div>
		</div>

		<div class="pl-[50px] items-center">
			<div class="text-neutral-200 mt-[150px] snap-normal">
				<About/>
			</div>
			<div class="text-neutral-200 mt-[350px] snap-normal ">
				<Install/>
			</div> 
			<div class="mt-[350px] ml-[450px]">
				<h1 class="text-6xl decor-tl font-semibold">Love Fast</h1>
			</div>
		</div>
		
		
	</main>

	
</Layout>

