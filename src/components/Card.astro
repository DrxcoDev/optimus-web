---
interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
		<p>
			
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background: rgb(255,169,169);
		background: linear-gradient(354deg, rgba(255,169,169,1) 0%, rgba(99,99,99,0.04525560224089631) 100%, rgba(0,0,0,1) 100%);
		animation: install 5s ;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}

	@keyframes  install {
		0%{
			background: rgb(255,169,169);
			background: linear-gradient(354deg, rgba(255,169,169,1) 0%, rgba(99,99,99,0.04525560224089631) 100%, rgba(0,0,0,1) 100%);
		}
		100%{
			background: rgb(255,169,169);
			background: linear-gradient(354deg, rgba(99,99,99,0.04525560224089631) 0%, rgba(255,169,169,1) 100%, rgba(0,0,0,1) 100%);
		}
	}
</style>
